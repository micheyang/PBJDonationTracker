<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.UserAppScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="?attr/actionModeSplitBackground"
            android:gravity="top"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mainMenuText"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/small_margin1"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@string/main_menu_label"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp" />

            <Space
                android:layout_width="@dimen/dim_175"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/logOutButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/card_corner_rad1"
                android:text="@string/logout"
                android:textAlignment="center"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="278dp"
                tools:layout_editor_absoluteY="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_250" />

            <TextView
                android:id="@+id/searchTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/searchButton_text"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.Material.Notification.Info.Ambient" />

            <Button
                android:id="@+id/searchButton"
                android:layout_width="@dimen/app_bar_height"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/search_item" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_75" />

            <TextView
                android:id="@+id/viewLocnText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/view_loc_label"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.Material.Notification.Info.Ambient" />

            <Button
                android:id="@+id/viewLocnButton"
                android:layout_width="@dimen/app_bar_height"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/viewLocationList" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>