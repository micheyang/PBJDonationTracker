<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.EmployeeSelectScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/selectTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_margin1"
            android:layout_marginTop="@dimen/dim_75"
            android:text="@string/selectLocnLabel"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/selectLocSpinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="35dp"
            android:layout_marginTop="10dp"
            android:entries="@array/allLocations"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="105dp" />

        <Button
            android:id="@+id/buttonSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/selLabel"
            tools:layout_editor_absoluteX="71dp"
            tools:layout_editor_absoluteY="173dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>