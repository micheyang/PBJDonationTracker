<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.UserList">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_75"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/exitButton"
            android:layout_width="67dp"
            android:layout_height="32dp"
            android:layout_marginLeft="@dimen/dim_150"
            android:backgroundTint="@color/color1"
            android:text="@string/exitLabel"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/userListTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="105dp"
            android:layout_marginBottom="@dimen/cardview_default_elevation"
            android:text="@string/dbLabel"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Widget.PopupMenu.Large"
            android:textColor="@color/cardview_light_background"
            android:textColorLink="@color/colorAccent"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/titleAccounts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:text="@string/accounts"
        android:textAlignment="viewStart"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>